{
	"name": "simplicite",
	"displayName": "simplicite-vscode-tools",
	"description": "Simplicite low code platform tools for VSCode",
	"publisher": "simplicitesoftware",
	"repository": "https://github.com/simplicitesoftware/vscode-tools",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:simplicite.info"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "simplicite.info",
				"title": "Simplicite: info"
			}
		],
		"configuration": [
			{
				"title": "Instance URL and credentials",
				"properties": {
					"simplicite.url": {
						"type": "string",
						"default": "http://localhost:8080",
						"description": "Instance URL."
					},
					"simplicite.username": {
						"type": "string",
						"default": "designer",
						"description": "Username."
					},
					"simplicite.password": {
						"type": "string",
						"default": "simplicite",
						"description": "Password."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"dts": "dts-gen -m simplicite"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"dts-gen": "^0.6.0",
		"simplicite": "latest"
	},
	"dependencies": {
		"simplicite": "latest"
	}
}
