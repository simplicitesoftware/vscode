{
	"name": "simplicite",
	"displayName": "simplicite-vscode-tools",
	"description": "Simplicite low code platform tools for VSCode",
	"publisher": "simplicitesoftware",
	"repository": {
		"url": "https://github.com/simplicitesoftware/vscode-tools",
		"type": "git"
	},
	"license": "Apache-2.0",
	"icon": "https://docs.simplicite.io/logos/touch/icon256.png",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:simplicite.appinfo",
		"onCommand:simplicite.sysinfo",
		"onFileSystem:simplicite",
		"onCommand:simplicite.initWorkspace",
		"onCommand:simplicite.refresh"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "simplicite.appinfo",
				"title": "Application information",
				"category": "Simplicite"
			},
			{
				"command": "simplicite.sysinfo",
				"title": "System information",
				"category": "Simplicite"
			},
			{
				"command": "simplicite.initWorkspace",
				"title": "Init workspace",
				"category": "Simplicite"
			},
			{
				"command": "simplicite.refresh",
				"title": "Refresh workspace",
				"category": "Simplicite"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "simplicite.initWorkspace",
					"when": "workbenchState != workspace"
				},
				{
					"command": "simplicite.refresh",
					"when": "workbenchState == workspace"
				}
			]
		},
		"configuration": [
			{
				"title": "Instance URL and credentials",
				"properties": {
					"simplicite.url": {
						"type": "string",
						"default": "http://localhost:8080",
						"description": "Instance URL."
					},
					"simplicite.username": {
						"type": "string",
						"default": "designer",
						"description": "Username."
					},
					"simplicite.password": {
						"type": "string",
						"default": "simplicite",
						"description": "Password."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"dts": "dts-gen -m simplicite"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"dts-gen": "^0.6.0",
		"simplicite": "latest"
	},
	"dependencies": {
		"simplicite": "latest"
	}
}
